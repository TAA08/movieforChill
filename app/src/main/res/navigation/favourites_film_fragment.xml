<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_second_fragment"
    app:startDestination="@id/favouritesMovieFragment">

    <fragment
        android:id="@+id/favouritesMovieFragment"
        android:name="com.example.movieforchill.presentation.favourite_movie.FavouriteFragment"
        android:label="@string/favourite_movie"
        tools:layout="@layout/fragment_favourite">
        <action
            android:id="@+id/action_favouritesMovieFragment_to_detailFragment"
            app:destination="@id/detailFragment" />
    </fragment>
    <fragment
        android:id="@+id/detailFragment"
        android:name="com.example.movieforchill.presentation.movie_detail.DetailFragment"
        android:label="@string/movie_detail"
        tools:layout="@layout/fragment_detail">
        <argument
            android:name="movieId"
            app:argType="integer" />
    </fragment>

</navigation>