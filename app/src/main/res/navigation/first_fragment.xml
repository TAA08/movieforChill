<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_first_fragment"
    app:startDestination="@id/firstFragment">

    <fragment
        android:id="@+id/firstFragment"
        android:name="com.example.movieforchill.screens.main.MainFragment"
        tools:layout="@layout/main_fragment">
        <action
            android:id="@+id/action_firstFragment_to_blankFragment"
            app:destination="@id/blankFragment" />
    </fragment>

    <fragment
        android:id="@+id/blankFragment"
        android:name="com.example.movieforchill.BlankFragment"
        tools:layout="@layout/fragment_blank">
        <argument
            android:name="data"
            app:argType="string" />
    </fragment>


</navigation>